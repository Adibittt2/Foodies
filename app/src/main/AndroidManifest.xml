<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aditya_verma.foodies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Feedback"></activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Foodies" />
        <activity android:name=".Cloud_Functions" />
        <activity android:name=".Error_Activity" />
        <activity
            android:name=".Shopping_history"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Google_pay"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Bill"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Payment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Address"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Paasta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Add_to_Cart"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Roll_Momo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Burger"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Chilli_and_Manchurian"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Macroni"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Chowmin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pizza"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fast_food"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cake"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <service android:name=".FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".FirebaseMessagingService"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>